  "dependencies": {
    "@chainlink/contracts": "^0.2.2",
    "@nomiclabs/hardhat-ethers": "^2.0.0",
    "@nomiclabs/hardhat-waffle": "^2.0.0",
    "@openzeppelin/contracts": "^4.3.2",
    "@openzeppelin/contracts-upgradeable": "^4.3.2",
    "@openzeppelin/hardhat-upgrades": "^1.10.0",
    "chai": "^4.2.0",
    "dotenv": "^10.0.0",
    "ethereum-waffle": "^3.0.0",
    "ethers": "^5.0.0",
    "hardhat": "^2.6.5"
  },
  "devDependencies": {},
  "scripts": {
    "rinkeby:fund": "hardhat --network rinkeby fund --to",
    "rinkeby:getOWSNToken": "hardhat --network rinkeby getOWSNToken --token",
    "rinkeby:getTokenUri": "hardhat --network rinkeby getTokenUri",
    "rinkeby:setOraclePrice": "hardhat --network rinkeby setOraclePrice",
    "rinkeby:getBalance": "hardhat --network rinkeby getBalance --owner",
    "rinkeby:deploy-tao": "npx hardhat run --network rinkeby scripts/1.1.deploy-tao.js",
    "rinkeby:deploy-tm": "npx hardhat run --network rinkeby scripts/1.2.deploy-tm.js",
    "rinkeby:deploy-owsn": "npx hardhat run --network rinkeby scripts/1.3.deploy-owsn.js",
    "rinkeby:upgrade-tao": "npx hardhat run --network rinkeby scripts/2.1.upgrade-tao.js",
    "rinkeby:upgrade-tm": "npx hardhat run --network rinkeby scripts/2.2.upgrade-tm.js",
    "rinkeby:upgrade-owsn": "npx hardhat run --network rinkeby scripts/2.3.upgrade-owsn.js",
    "rinkeby:console": "npx hardhat console --network rinkeby",
    "rinkeby:deploy-all": "yarn rinkeby:deploy-tao && yarn rinkeby:deploy-tm && yarn rinkeby:deploy-owsn",
    "rinkeby:upgrade-all": "yarn rinkeby:upgrade-tao && yarn rinkeby:upgrade-tm && yarn rinkeby:upgrade-owsn",
    "rinkeby:verify": "npx hardhat verify --network rinkeby",
    "hardhat:node": "hardhat node",
    "localhost:fund": "hardhat --network localhost fund --to",
    "localhost:getOWSNToken": "hardhat --network localhost getOWSNToken --token",
    "localhost:getTokenUri": "hardhat --network localhost getTokenUri",
    "localhost:setOraclePrice": "hardhat --network localhost setOraclePrice",
    "localhost:deploy-tao": "npx hardhat run --network localhost scripts/1.1.deploy-tao.js",
    "localhost:deploy-tm": "npx hardhat run --network localhost scripts/1.2.deploy-tm.js",
    "localhost:deploy-owsn": "npx hardhat run --network localhost scripts/1.3.deploy-owsn.js",
    "localhost:upgrade-tao": "npx hardhat run --network localhost scripts/2.1.upgrade-tao.js",
    "localhost:upgrade-tm": "npx hardhat run --network localhost scripts/2.2.upgrade-tm.js",
    "localhost:upgrade-owsn": "npx hardhat run --network localhost scripts/2.3.upgrade-owsn.js",
    "localhost:console": "npx hardhat console --network localhost",
    "localhost:deploy-all": "yarn localhost:deploy-tao && yarn localhost:deploy-tm && yarn localhost:deploy-owsn",
    "localhost:upgrade-all": "yarn localhost:upgrade-tao && yarn localhost:upgrade-tm && yarn localhost:upgrade-owsn",
    "localhost:clean": "rm locks/*.localhost.json && rm -rf ./artifacts && rm -rf ./cache",
    "test": "npx hardhat test"
  }
}
